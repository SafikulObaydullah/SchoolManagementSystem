@model IEnumerable<MVCClient.ViewModels.RolesVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<style>
    #lnk {
        margin-right: 15px;
    }
</style>
<div>@Html.ActionLink("Create", "Create", "Roles", null, new { @class = "btn btn-secondary" })</div>

@if (Model.Count() > 0)
{

    <h2>All roles</h2>
    <table class="table table-active">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>...</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a href="/Roles/Edit/@item.Id" title="Edit item" id="lnk">
                        <i class="fa fa-pencil-alt"></i>
                    </a>

                    <a href="/Roles/Delete/@item.Id" title="Delete item">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
}
else
{
    @Html.Raw("No records found")
}

